<turbo-frame id="form_container">
  <div class="<%= card_classes %>">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
        <%= resource.persisted? ? "Edit #{resource_class.model.name}" : "New #{resource_class.model.name}" %>
      </h3>
      
      <%= form_with model: resource, url: url, method: method, 
                    data: { turbo_frame: "form_container" },
                    class: "space-y-6" do |form| %>
        
        <% fields.each do |name, config| %>
          <div class="field-group">
            <% unless config[:type] == :boolean %>
              <%= form.label name, field_label(name, config), 
                            class: "block text-sm font-medium text-gray-700" %>
            <% end %>
            
            <div class="mt-1">
              <%= field_input(form, name, config) %>
            </div>
            
            <% if field_help_text(config) %>
              <p class="mt-1 text-sm text-gray-500">
                <%= field_help_text(config) %>
              </p>
            <% end %>
            
            <%= field_errors(name) %>
          </div>
        <% end %>
        
        <div class="pt-4 border-t border-gray-200">
          <%= form_actions %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
