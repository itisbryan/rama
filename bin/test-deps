#!/usr/bin/env ruby
# frozen_string_literal: true

# Simple script to test dependency resolution
puts "Testing dependency resolution..."

begin
  require 'bundler/setup'
  puts "âœ… Bundler setup successful"
rescue Bundler::GemNotFound => e
  puts "âŒ Missing gem: #{e.message}"
  exit 1
rescue => e
  puts "âŒ Error: #{e.message}"
  exit 1
end

# Test SimpleCov loading
begin
  require 'simplecov'
  puts "âœ… SimpleCov loaded successfully (version: #{SimpleCov::VERSION})"
rescue LoadError => e
  puts "âŒ SimpleCov not available: #{e.message}"
end

# Test SimpleCov-LCOV loading
begin
  require 'simplecov-lcov'
  puts "âœ… SimpleCov-LCOV loaded successfully"
rescue LoadError => e
  puts "âŒ SimpleCov-LCOV not available: #{e.message}"
end

# Test RuboCop loading
begin
  require 'rubocop'
  puts "âœ… RuboCop loaded successfully (version: #{RuboCop::Version::STRING})"
rescue LoadError => e
  puts "âŒ RuboCop not available: #{e.message}"
end

puts "\nğŸ‰ All dependencies resolved successfully!"
